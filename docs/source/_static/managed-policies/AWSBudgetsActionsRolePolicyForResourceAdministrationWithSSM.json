{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"ec2:DescribeInstanceStatus",
				"ec2:StartInstances",
				"ec2:StopInstances",
				"rds:DescribeDBInstances",
				"rds:StartDBInstance",
				"rds:StopDBInstance"
			],
			"Resource": "*",
			"Condition": {
				"ForAnyValue:StringEquals": {
					"aws:CalledVia": [
						"ssm.amazonaws.com"
					]
				}
			}
		},
		{
			"Effect": "Allow",
			"Action": [
				"ssm:StartAutomationExecution"
			],
			"Resource": "*"
		}
	]
}