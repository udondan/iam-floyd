        "arn:aws:ec2:*:*:volume/*",
        "arn:aws:ec2:*:*:snapshot/*",
        "arn:aws:ec2:*:*:instance/*"
      ],
      "Condition": {
        "StringEquals": {
          "ec2:CreateAction": [
            "CreateFleet"
          ]
        },
        "ForAnyValue:StringEquals": {
          "aws:CalledVia": [
            "drs.amazonaws.com"
          ]
        }
      }
    },
    {
