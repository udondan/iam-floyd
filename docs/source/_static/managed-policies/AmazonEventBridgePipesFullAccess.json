{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EventBridgePipesActions",
      "Effect": "Allow",
      "Action": "pipes:*",
      "Resource": "*"
    },
    {
      "Sid": "IAMPassRoleAccessForPipes",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::*:role/*",
      "Condition": {
        "StringLike": {
          "iam:PassedToService": "pipes.amazonaws.com"
        }
      }
    }
  ]
}