{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchPolicyStatement",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "cloudwatch:namespace": [
            "AWS/Athena",
            "AWS/Usage"
          ]
        }
      }
    }
  ]
}